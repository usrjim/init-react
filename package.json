{
  "name": "init-react",
  "version": "1.0.0",
  "scripts": {
    "build": "esbuild src/app.jsx --jsx=automatic --jsx-import-source=react --bundle --outfile=public/dist/app.js",
    "watch": "npm run build -- --watch",
    "serve": "cd public && python3 -m http.server 3000",
    "prepare": "husky"
  },
  "author": "usrjim",
  "license": "GPL-3.0",
  "lint-staged": {
    "*.{js,jsx,css,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "esbuild": "^0.25.7",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
